@{
}

@model IEnumerable<Product>
@if (User.IsInRole("admin")){

<h1> Hello Admin</h1>

<div class="form-group">
  <a asp-controller="Todoes" asp-action="Create" class="btn btn-primary">
    Create a new Product
  </a>
</div>

<div class="form-group">
  <form>
    <input type="text" name="category" placeholder="Search by Product" />
    <button type="submit" class="btn btn-primary">Search</button>
  </form>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name Product</th>
      <th scope="col">Quantity Product</th>
      <th scope="col">Price Product</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model){
      <tr>
      <th scope="row">@item.Id</th>
      <td>@item.NameProduct</td>
      <td>@item.QuantityProduct</td>
      <td>@item.PriceProduct</td>
      <th scope="col">Action</th>

      <td>
        <a asp-controller="Todoes" asp-action="Edit" asp-route-id=@item.Id class="btn btn-info"> 
          Edit
        </a>
        <a asp-controller="Todoes" asp-action="Delete" asp-route-id=@item.Id class="btn btn-danger"> 
          Delete
        </a>
        <a asp-controller="Todoes" asp-action="Details" asp-route-id=@item.Id class="btn btn-success"> 
          Details
        </a>
      </td>
    </tr>
  }
   
  </tbody>
</table>
}